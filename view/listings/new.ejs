<% layout("/layouts/boilerplate") %>

<div class="row justify-content-center my-5">
  <div class="col-lg-8 col-md-10">
    <div class="card shadow-lg border-0 rounded-4">
      <div class="card-body p-4">
        <h3 class="text-center fw-bold mb-4" style="color: #fe424d">
          <i class="fa-solid fa-house-chimney-user"></i> Create a New Listing
        </h3>

        <form
          method="POST"
          action="/listings"
          class="needs-validation"
          novalidate
          enctype="multipart/form-data"
        >
          <!-- Title -->
          <div class="mb-3">
            <label
              for="title"
              class="form-label fw-semibold"
              style="color: #fe424d"
              >Title</label
            >
            <input
              name="listing[title]"
              placeholder="Add a Catchy Title"
              type="text"
              class="form-control form-control-lg"
              required
            />
            <div class="valid-feedback">looks good!</div>
          </div>

          <!-- Description -->
          <div class="mb-3">
            <label
              for="description"
              class="form-label fw-semibold"
              style="color: #fe424d"
              >Description</label
            >
            <textarea
              name="listing[description]"
              rows="4"
              class="form-control form-control-lg"
              placeholder="Describe your listing..."
              required
            ></textarea>
            <div class="invalid-feedback">
              Please provide a short description!
            </div>
          </div>

          <!-- Imagefile -->
          <div class="mb-3">
            <label
              for="image"
              class="form-label fw-semibold"
              style="color: #fe424d"
              >Upload Listing Image</label
            >
            <input
              name="listing[image]"
              class="form-control form-control-lg"
              type="file"
              required
            />
          </div>

          <!-- Price -->
          <div class="mb-3">
            <label
              for="price"
              class="form-label fw-semibold"
              style="color: #fe424d"
              >Price</label
            >
            <input
              name="listing[price]"
              placeholder="1200"
              type="number"
              class="form-control form-control-lg"
              required
            />
            <div class="invalid-feedback">Please provide a valid Price!</div>
          </div>

          <!-- Location & Country -->
          <div class="row">
            <div class="mb-3 col-md-6">
              <label
                for="location"
                class="form-label fw-semibold"
                style="color: #fe424d"
                >Location</label
              >
              <input
                name="listing[location]"
                placeholder="Delhi, Kashmir"
                type="text"
                class="form-control form-control-lg"
                required
              />
              <div class="invalid-feedback">Please provide a valid city.</div>
            </div>
            <div class="mb-3 col-md-6">
              <label
                for="country"
                class="form-label fw-semibold"
                style="color: #fe424d"
                >Country</label
              >
              <input
                name="listing[country]"
                placeholder="India"
                type="text"
                class="form-control form-control-lg"
                required
              />
              <div class="invalid-feedback">
                Please provide a valid country.
              </div>
            </div>
          </div>

          <!-- Button -->
          <div class="text-center mt-4">
            <button class="btn-custom">Add Listing</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

