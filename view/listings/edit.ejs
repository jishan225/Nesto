<% layout("/layouts/boilerplate") %>

<div class="row justify-content-center my-5">
  <div class="col-lg-8 col-md-10">
    <div class="card shadow-lg border-0 rounded-4">
      <div class="card-body p-4">
        <!-- Heading -->
        <h3 class="text-center fw-bold mb-4" style="color: #fe424d">
          <i class="fa-solid fa-pen-to-square"></i> Edit Listing
        </h3>

        <form
          method="POST"
          action="/listings/<%= listing._id %>?_method=PUT"
          class="needs-validation"
          novalidate
          enctype="multipart/form-data"
        >
          <!-- Title -->
          <div class="mb-3">
            <label
              for="title"
              class="form-label fw-semibold"
              style="color: #fe424d"
              >Title</label
            >
            <input
              name="listing[title]"
              value="<%= listing.title %>"
              type="text"
              class="form-control form-control-lg"
              required
            />
            <div class="valid-feedback">looks good!</div>
          </div>

          <!-- Description -->
          <div class="mb-3">
            <label
              for="description"
              class="form-label fw-semibold"
              style="color: #fe424d"
              >Description</label
            >
            <textarea
              name="listing[description]"
              rows="4"
              class="form-control form-control-lg"
              required
            ><%= listing.description %></textarea>
            <div class="invalid-feedback">Provide a short description!</div>

           <!-- image preview -->
          <div class="mb-3 text-center">
          <label class="form-label fw-semibold d-block" style="color: #fe424d;">
                  Original Listing Image
          </label>
          <div class="border rounded p-2 d-inline-block shadow-sm" style="width: 250px; height: 200px; overflow: hidden;">
          <img 
          src="<%= originalImg %>" 
          alt="Listing Image" 
          class="img-fluid rounded"
          style="width: 100%; height: 100%; object-fit: cover;"
         />
       </div>
     </div>

          <!-- Image -->
          <div class="mb-3">
            <label
              for="image"
              class="form-label fw-semibold"
              style="color: #fe424d"
              >Upload New Image</label
            >
            <input
              name="listing[image]"
              class="form-control form-control-lg"
              type="file"
              placeholder="https://example.com/image.jpg"
             
            />
           
          </div>

          <!-- Price -->
          <div class="mb-3">
            <label
              for="price"
              class="form-label fw-semibold"
              style="color: #fe424d"
              >Price</label
            >
            <input
              name="listing[price]"
              value="<%= listing.price %>"
              type="number"
              class="form-control form-control-lg"
              required
            />
            <div class="invalid-feedback">Provide valid Price!</div>
          </div>

          <!-- Location & Country -->
          <div class="row">
            <div class="mb-3 col-md-6">
              <label
                for="location"
                class="form-label fw-semibold"
                style="color: #fe424d"
                >Location</label
              >
              <input
                name="listing[location]"
                value="<%= listing.location %>"
                type="text"
                class="form-control form-control-lg"
                required
              />
              <div class="invalid-feedback">Provide valid Location!</div>
            </div>
            <div class="mb-3 col-md-6">
              <label
                for="country"
                class="form-label fw-semibold"
                style="color: #fe424d"
                >Country</label
              >
              <input
                name="listing[country]"
                value="<%= listing.country %>"
                type="text"
                class="form-control form-control-lg"
                required
              />
              <div class="invalid-feedback">Provide a valid Country!</div>
            </div>
          </div>

          <!-- Button -->
          <div class="text-center mt-4">
            <button class="btn-custom">Edit Listing</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


