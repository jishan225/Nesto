<% layout("/layouts/boilerplate") %>

<div class="row justify-content-center my-5">
  <div class="col-lg-8 col-md-10">
    <div class="card shadow-lg border-0 rounded-4">
      <div class="card-body p-4">
        <!-- Heading -->
        <h3 class="text-center fw-bold mb-4" style="color: #fe424d">
          <i class="fa-solid fa-pen-to-square"></i> Edit Listing
        </h3>

        <form
          method="POST"
          action="/listings/<%= listing._id %>?_method=PUT"
          class="needs-validation"
          novalidate
        >
          <!-- Title -->
          <div class="mb-3">
            <label
              for="title"
              class="form-label fw-semibold"
              style="color: #fe424d"
              >Title</label
            >
            <input
              name="Listing[title]"
              value="<%= listing.title %>"
              type="text"
              class="form-control form-control-lg"
              required
            />
            <div class="valid-feedback">looks good!</div>
          </div>

          <!-- Description -->
          <div class="mb-3">
            <label
              for="description"
              class="form-label fw-semibold"
              style="color: #fe424d"
              >Description</label
            >
            <textarea
              name="Listing[description]"
              rows="4"
              class="form-control form-control-lg"
              required
            ><%= listing.description %></textarea>
            <div class="invalid-feedback">Provide a short description!</div>
          </div>

          <!-- Image -->
          <div class="mb-3">
            <label
              for="image"
              class="form-label fw-semibold"
              style="color: #fe424d"
              >Image Link</label
            >
            <input
              name="Listing[image]"
              value="<%= listing.image && listing.image.url ? listing.image.url : '' %>"
              class="form-control form-control-lg"
              type="url"
              placeholder="https://example.com/image.jpg"
              required
            />
            <div class="invalid-feedback">Provide a valid image URL/Link!</div>
          </div>

          <!-- Price -->
          <div class="mb-3">
            <label
              for="price"
              class="form-label fw-semibold"
              style="color: #fe424d"
              >Price</label
            >
            <input
              name="Listing[price]"
              value="<%= listing.price %>"
              type="number"
              class="form-control form-control-lg"
              required
            />
            <div class="invalid-feedback">Provide valid Price!</div>
          </div>

          <!-- Location & Country -->
          <div class="row">
            <div class="mb-3 col-md-6">
              <label
                for="location"
                class="form-label fw-semibold"
                style="color: #fe424d"
                >Location</label
              >
              <input
                name="Listing[location]"
                value="<%= listing.location %>"
                type="text"
                class="form-control form-control-lg"
                required
              />
              <div class="invalid-feedback">Provide valid Location!</div>
            </div>
            <div class="mb-3 col-md-6">
              <label
                for="country"
                class="form-label fw-semibold"
                style="color: #fe424d"
                >Country</label
              >
              <input
                name="Listing[country]"
                value="<%= listing.country %>"
                type="text"
                class="form-control form-control-lg"
                required
              />
              <div class="invalid-feedback">Provide a valid Country!</div>
            </div>
          </div>

          <!-- Button -->
          <div class="text-center mt-4">
            <button class="btn-custom">Edit Listing</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script src="/js/script.js"></script>
