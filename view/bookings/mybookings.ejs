<% layout("/layouts/boilerplate") %>

<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="mb-0">
      <i class="fas fa-calendar-check me-2" style="color: #fe424d"></i>
      My Bookings
    </h3>
    <span
      class="badge bg-danger-subtle text-danger border border-danger-subtle"
    >
      <%= bookings.length %> total
    </span>
  </div>

  <% if (bookings.length === 0) { %>
  <div class="text-center py-5">
    <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
    <h5 class="text-muted">No bookings yet</h5>
    <p class="text-muted mb-3">Explore listings and book your first stay.</p>
    <a href="/listings" class="btn btn-danger btn-sm">
      <i class="fas fa-search me-1"></i>Browse Listings
    </a>
  </div>
  <% } else { %>
  <div class="row g-3">
    <% bookings.forEach(b => { const nights = Math.ceil((new Date(b.checkOut) -
    new Date(b.checkIn)) / (1000*60*60*24)); %>
    <div class="col-md-6">
      <div class="card border-0 shadow-sm rounded-3 h-80">
        <div class="card-body d-flex flex-column justify-content-between">
          <div>
            <h6 class="fw-bold mb-1">
              <%= b.listing?.title || 'Listing removed' %>
            </h6>
            <p class="text-muted small mb-2">
              <i class="fas fa-map-marker-alt me-1"></i>
              <%= b.listing?.location || 'â€”' %>
            </p>

            <div class="d-flex justify-content-between small mb-2">
              <span
                ><i class="fas fa-sign-in-alt me-1 text-success"></i><%= new
                Date(b.checkIn).toDateString() %></span
              >
              <span
                ><i class="fas fa-sign-out-alt me-1 text-danger"></i><%= new
                Date(b.checkOut).toDateString() %></span
              >
            </div>

            <div class="d-flex justify-content-between small">
              <span
                ><i class="fas fa-users me-1"></i><%= b.guests %> guest<%=
                b.guests>1?'s':'' %></span
              >
              <span class="fw-semibold text-success">
                <i class="fas fa-rupee-sign me-1"></i><%=
                b.totalPrice.toLocaleString() %>
                <span class="text-muted"
                  >/ <%= nights %> night<%= nights>1?'s':'' %></span
                >
              </span>
            </div>
          </div>

          <% if (b.listing?._id) { %>
          <div class="d-flex justify-content-end mt-3">
            <a
              href="/listings/<%= b.listing._id %>"
              class="btn btn-outline-primary btn-sm"
            >
              <i class="fas fa-eye me-1"></i>View
            </a>
          </div>
          <% } %>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
  <% } %>
</div>
