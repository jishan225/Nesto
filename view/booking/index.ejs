<% layout("/layouts/boilerplate") %>

<div class="container my-5">
  <h2>Bookings for <%= listing.title %></h2>
  
  <% if (bookings.length === 0) { %>
    <p>No bookings yet for this listing.</p>
  <% } else { %>
    <div class="row">
      <% bookings.forEach(booking => { %>
        <div class="col-md-6 mb-3">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= booking.user.username %></h5>
              <p><strong>Check-in:</strong> <%= booking.checkIn.toDateString() %></p>
              <p><strong>Check-out:</strong> <%= booking.checkOut.toDateString() %></p>
              <p><strong>Guests:</strong> <%= booking.guests %></p>
              <p><strong>Total:</strong> â‚¹<%= booking.totalPrice %></p>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>
