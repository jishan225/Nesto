<% if (success && success.length > 0) { %>
  <div class="d-flex justify-content-center">
    <div class="alert alert-success alert-dismissible fade show" role="alert" style="width: 400px;" id="successAlert">
      <strong>Success!</strong> <%= success %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
<% } %>

<% if (error && error.length) { %>
  <div class="d-flex justify-content-center">
    <div class="alert alert-danger alert-dismissible fade show" role="alert" style="width: 400px;" id="successAlert">
      <strong>Error!</strong> <%= error %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
<% } %>
